{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "lib": [
      "esnext"
    ],
    "esModuleInterop": true,
    "typeRoots": [
      "./src/@types/**",
    ],
  },
  "include": [
    "src/**/*",
    "swagger.json"
  ],
  "skipLibCheck": true,
}
